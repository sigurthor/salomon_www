.searchbar
  %input.search-input{:type => 'text', :placeholder => 'What are you searching for?'}
  %input{:type => 'submit', :value => 'Submit'}

#nav-container{:class=>yield(:navclass)}
  %nav.top-bar
    %section.top-bar-section
      %ul.title-area
        %li=link_to 'Salomon Snowboards', home_path, class: 'logo'
        %li.toggle-topbar
          %a{:href=>'#'}
            %span Menu
      / Left Nav Section
      %ul.left
        %li.has-dropdown
          %a{:href => "#"}
            = t 'nav.gear'
          %ul.dropdown
            - gear_categories.each do |c|
              %li=link_to c.name,products_url(:category => c.slug)
        %li= link_to t('nav.team'), team_path
        %li
          %a= link_to t('nav.videos'), video_path
        %li
          %a{:href => "http://ssnowdev.tumblr.com/"}
            =t('nav.blog')
        %li
          %a= link_to t('nav.stores') , store_path

      %ul.right
        //%li
        //%a.searchbutton{:href => '#'} Search
        %li.basket
          %a{:href => '#'} My Account <i class="ss-icon ss-standard">cart</i> 0
        %li.social.has-dropdown
          %a.ss-icon.ss-social{:href=>'#'} &#xF610;
          .dropdown.facebook
            .dropdown-inner
              .fb-like-box{"data-header" => "true", "data-href" => "https://www.facebook.com/SalomonSnowboardFans", "data-show-border" => "true", "data-show-faces" => "false", "data-stream" => "false", "data-width" => "292"}

        %li.social
          %a.ss-icon.ss-social{:href=>'http://instagram.com/salomonsnowboards'} &#xF641;

        %li.social.has-dropdown
          %a.ss-icon.ss-social{:href=>''} &#xF611;
          .dropdown.twitter
            .dropdown-inner
              %a.twitter-follow-button{"data-show-count" => "false", "data-size" => "large", :href => "https://twitter.com/salomonboarduk"} Follow @salomonboarduk
              :javascript
                !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

        %li.social.has-dropdown
          %a.ss-icon.ss-social{:href=>'#'} &#xF650;
          .dropdown.pinterest
            .dropdown-inner
              %a{"data-pin-do" => "buttonFollow", :href => "http://pinterest.com/salomonsnow/"} Salomon Snowboards