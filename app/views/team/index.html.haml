- content_for(:bodyclass) do
  team
%section#the-pros
  .row
    - @team_categories.each do |c|
      %h2= c.name
      .team-members
        .row
          - c.team_members.each do |tm|
            .large-3.columns
              .team-member
                .team-member-info
                  %h2
                    = link_to tm.name, team_member_path(tm.slug)
                  .team-member-country
                    = tm.country
                %img{:src=>'http://placekitten.com/g/280/280'}
                / = image_tag tm.thumb_image

