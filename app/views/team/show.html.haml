- content_for(:bodyclass) do
  team-member

%section#member-nav
  .loading-category
  .category-switches
    %h2
      %span#pros-category Pros
      %span#ams-category Ams
  .navigation-buttons
    .click-buttons
      %a.left-arrow{:href => '#'}
        %i{:class => 'ss-icon ss-standard'} navigateleft
      %a.right-arrow{:href => '#'}
        %i{:class => 'ss-icon ss-standard'} navigateright
    .hover-buttons
      .hover-nav-left
      .hover-nav-right
  .member-nav-wrapper{slider_viewport}
    %ul.team-nav
      - @team_member.category.team_members.each do |tm|
        %li.has-overlay
          .nav-team-member.img-zoom-hover
            = cl_image_tag tm.thumb_image, :width => 140, :height => 140, :crop => 'fill'
            .team-member-info
              %h3
                = tm.fullname
              .team-member-country
                = tm.country

%section#member
  .row
    .member-profile.vimeo{:style => 'background-image: url("' + cl_image_path(@team_member.main_image, :crop => "fill") + '");'}(data-vimeo-id="#{@profile_video}" data-vimeo-width="1200" data-vimeo-height="663")
      .video-player
      .profile-text
        %h2= @team_member.name
        %p{set_text_length_class(@team_member.description, 230)}
          = @team_member.description

      .quote
        .author= @team_member.quoter_name
        .title= @team_member.quoter_title

    .member-details
      .row
        .large-4.columns
          .large-6.columns
            %h2 Details
            .social-details
              - unless member_detail_is_empty(@team_member.facebook)
                .facebook
                  %a{:href => "http://facebook.com/#{@team_member.facebook}", :target => '_new'}
                    %i{:class => 'ss-icon ss-social'} facebook
                    %span /#{@team_member.facebook}
              - unless member_detail_is_empty(@team_member.twitter)
                .twitter
                  %a{:href => "http://twitter.com/#{@team_member.twitter}", :target => '_new'}
                    %i{:class => 'ss-icon ss-social'} twitter
                    %span @#{@team_member.twitter}
              - unless member_detail_is_empty(@team_member.instragram)
                .twitter
                  %a{:href => "http://instagram.com/#{@team_member.instragram}", :target => '_new'}
                    %i{:class => 'ss-icon ss-social'} instagram
                    %span @#{@team_member.instragram}
        .large-8.columns
          =@team_member.city
          %ul.member-info-list
            - unless member_detail_is_empty(@team_member.country)
              %li.country
                %span Country
                %span.detail-value= @team_member.country
            / - unless member_detail_is_empty(@team_member.city)
            /   %li
            /     %span Hometown
            /     %span= @team_member.city

/
  %section#member-gallery
    .row
      %h2 Gallery
      .large-2.columns
        %img{:src => 'http://placekitten.com/g/180/180'}
      .large-2.columns
        %img{:src => 'http://placekitten.com/g/180/180'}
      .large-2.columns
        %img{:src => 'http://placekitten.com/g/180/180'}
      .large-2.columns
        %img{:src => 'http://placekitten.com/g/180/180'}
      .large-2.columns
        %img{:src => 'http://placekitten.com/g/180/180'}
      .large-2.columns
        %img{:src => 'http://placekitten.com/g/180/180'}

  %section#gear-used
    .row
      %h2 Gear Used
      .large-3.columns.large-offset-1
        .gear-item
          = image_tag('fixme-gear-used-board.png')
          %h3 Drift Rocker
          .price $89.95
      .large-4.columns
        .gear-item
          = image_tag('fixme-gear-used-robot-boot.png')
          %h3 Drift Rocker
          .price $89.95
      .large-4.columns.end
