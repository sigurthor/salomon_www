- content_for(:navclass) do
  sticky

- content_for(:page_title) do
  #{@product.name} #{@product.categories[0].name_singular}

- content_for(:page_description) do
  #{@product.description}

%section#breadcrumbs
  %ul
    %li Your Location
    %li Gear
    %li=link_to @product.categories[0].name,products_url(:category => @product.categories[0])
    %li=link_to @product.name, product_show_path(:product => @product.slug)


%section#main.product-details
  .row
    .large-6.columns
      .product-main-image
        - if @product.is_snowboard?
          = prepend_snowboard_crop(cl_image_tag(@product.master_image, :width=>'280', :height => '600', :crop => 'fit'))
        - else
          = cl_image_tag(@product.master_image, :width=>'580', :height => '500', :crop => 'fit')
      .product-thumbnails
        %ul
          - @product.product_color_variants[0].product_images.each_with_index do |thumb, i|
            %li{:class => (i == 0?'active':'')}
              .img-wrapper
                = link_to cl_image_tag(thumb.img, :width=>'80', :height=>'80', :crop =>'fit', :data=>{:fullsize=>cl_image_path(thumb.img, :width=>'580', :height=>'500', :crop => 'fit')}), '#'
              %a{:href=>'#'} View #{i+1}
    .large-6.columns
      %h1= @product.name
      %span= t("gender.#{@product.gender}", :count => 2) + " " + @product.categories[0].name_singular
      %h2=  t :display_currency, price: @product.price

      %form.custom
        - if @product.is_snowboard?
          = render :partial => 'product_size_thumbs', :locals => { :variants => @product.product_variants }
        - else
          = render :partial => 'product_color_thumbs', :locals => { :variants => @product.product_color_variants }

          /
            .product-meta
              %h5 Size
              %select.dropdown.small
                %option 8.5
                %option 9
                %option 9.5
                %option 10
                %option 11
        %a.button Buy now

      .product-model
        %span= "MODEL #{@product.article_code}"
        %span
          12 reviews
        %span.ss-icon.ss-standard
          %i.blue star star star
          star

      %p.product-description=@product.description
%section.panel.gray
  .row
    .large-8.columns
      %h2 Gallery
      .large-3.columns
        %img{:src=>'http://placehold.it/180x180'}
      .large-3.columns
        %img{:src=>'http://placehold.it/180x180'}
      .large-3.columns
        %img{:src=>'http://placehold.it/180x180'}
      .large-3.columns
        %img{:src=>'http://placehold.it/180x180'}
        .more-images
          %a{:href => '#'}
            %div
              %span 7 more images
    .large-3.columns.large-offset-1
      %h2 Riders
      %ul.riders
        %li Takaharu Nakai
        %li Takaharu Nakai
        %li Takaharu Nakai
        %li Takaharu Nakai
        %li Takaharu Nakai
        %li 5 other riders

%section.panel#tech
  .row
    %h2 Technology
    .large-12.columns
      .tech-info
        %ul.tech-list
          -@product.product_features.each do |feature|
            %li
              %span=feature.product_feature_type_name
              %span=feature.name


  - if @product.is_snowboard?
    .row.sizes
      %h2 Sizing information
      %section-container-tabs(data-section="tabs")
        - @product.product_variants.each do |variant|
          %section
            .title(data-section-title)
              %a{:href=>'#'}=variant.size
            .content(data-section-content)
              .row
                .large-4.columns
                  %ul.tech-stats
                    -variant.tech_specifications.each do |spec|
                      %li
                        %span=spec.tech_definition_name
                        %span=spec.value
                .large-8.columns
                  .technical-drawing
                    .technical-value
                      636
                    = image_tag('board.png')
                    .technical-demonstration
                      .technical-indicator