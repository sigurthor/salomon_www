- content_for(:navclass) do
  sticky

- content_for(:page_title) do
  - cache ['page_title',I18n.locale ,@product] do
    #{@product.name} #{@product.categories[0].name_singular}

- content_for(:page_description) do
  - cache ['page_description',I18n.locale ,@product] do
    #{@product.description}

- cache [I18n.locale ,@product] do
  %section#breadcrumbs
    %ul
      %li Your Location
      %li Gear
      %li=link_to @product.categories[0].name,products_url(:category => @product.categories[0])
      %li=link_to @product.name, product_show_path(:product => @product.slug)

%section#main.product-details
  .row
    .large-6.columns
      .product-main-image
        - img_loader do
          - if @product.is_snowboard?
            = prepend_snowboard_crop(cl_image_tag(@product.master_image, :width=>'580', :height => '500', :crop => 'fit', :onload => 'form5image.hasLoaded(this)'))
          - else
            = cl_image_tag(@product.master_image, :width=>'580', :height => '500', :crop => 'fit', :onload => 'form5image.hasLoaded(this)')
      .product-thumbnails
        %ul
          - @product.product_color_variants[0].product_images.each_with_index do |thumb, i|
            %li{:class => (i == 0?'active':'')}
              .overlay-wrapper
                = link_to cl_image_tag(thumb.img, :width=>'80', :height=>'80', :crop =>'fit', :data=>{:fullsize=>cl_image_path(thumb.img, :width=>'580', :height=>'500', :crop => 'fit')}), '#'
              %a{:href=>'#'} View #{i+1}
    .large-6.columns
      %h1= @product.name
      %span= t("gender.#{@product.gender}", :count => 2) + " " + @product.categories[0].name_singular
      %h2=  t :display_currency, price: @product.price
      %form.custom
        - if @product.is_snowboard?
          = render :partial => 'product_size_thumbs', :locals => { :variants => @product.product_variants }
        - else
          = render :partial => 'product_color_thumbs', :locals => { :variants => @product.product_color_variants }

          /
            .product-meta
              %h5 Size
              %select.dropdown.small
                %option 8.5
                %option 9
                %option 9.5
                %option 10
                %option 11
        %a.button Buy now

      .product-model
        %span= "MODEL #{@product.article_code}"
        %span
          12 reviews
        %span.ss-icon.ss-standard
          %i.blue star star star
          star

      %p.product-description=@product.description

  - # Template Dependency: product/tech_panel
  = render :partial => 'tech_panel', :locals => { :product => @product }
