- content_for :bodyclass do
  subpage

- content_for :navclass do
  sticky

%section#breadcrumbs
  %ul
    %li Your Location
    %li
      %a{:href=>'#'} Boots
    %li
      %a{:href=>'#'} Launch

%section#filterbar
  %form.custom
    .row
      - @feature_types.each do |filter|
        .large-3.columns
          %h4=filter.name
          %ul
            - filter.product_features.each do |feature|
              %li.filter(data-filter="men")
                %label(for="men-checkbox")
                  %input#men-checkbox.hidden-field{:type=>'checkbox'}
                  %span.custom.checkbox
                  =feature.name

%section#main
  .row
    #product-list
      -@products.each do |product|
        .large-3.columns.mix.men
          .product
            .main-info.img-zoom-hover
              = cl_image_tag product.master_image,  :width => 200, :crop => :fit
              %h2
                = link_to product.name, product_show_path(params[:category],product.slug)
              .price=product.price
            .more-info
              -product.product_features.each do |feature|
                .feature
                - if feature.product_feature_type_show_in_category_overview
                  %h5=feature.product_feature_type_name
                  %span=feature.name

      .large-3.columns.end
        .product.last
          %h2
            You've reached
            %br
            the last
            %br
            product

          .message Donec sed odio dui. Maecenas faucibus mollis interdum. Fusce dapibus, tellus ac cursus commodo.
          %ul.links
            %li
              %a Modify filters
            %li
              %a Clear filters
            %li
              %a Back to front page