%section#updates
  #videos.row
    - @videos.first(4).each do |v|
      .large-6.columns
        .update-item.vimeo(data-vimeo-id="#{v.item_id}")
          .update-meta
            %i.ss-icon.ss-standard video
            %p=v.title
            .time-ago 4 days ago
          .img-wrapper
            %img{:src=>"#{v.image_url}"}
          .video-player

  .row
    .large-4.large-offset-4.columns
      %a.button.load-videos{:href=>'#'} Load more videos